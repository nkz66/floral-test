@model Floral.Models.Supplier
@{
    ViewData["Title"] = "Supplier Detail";
}
<h1>@ViewData["Title"]</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Campany Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.campanyName)
        </dd>

        <dt class="col-sm-2">
            Phone Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phoneNum)
        </dd>

        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>


        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>


        <dt class="col-sm-2">
            Website:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.website)
        </dd>


        <dt class="col-sm-2">
            Remark:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.remark)
        </dd>


        <dt class="col-sm-2">
            Bank:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bank)
        </dd>


        <dt class="col-sm-2">
            Bank Account:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bankAcc)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
